<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/history_head_h"
        android:background="@drawable/side_nav_bar"
        android:gravity="center">

        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:shadowColor="#ffee00ff"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="25"
            android:text="0"
            android:textColor="@color/text_pink"
            android:textSize="60sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg">

        <se.emilsjolander.stickylistheaders.StickyListHeadersListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></se.emilsjolander.stickylistheaders.StickyListHeadersListView>


        <TextView
            android:id="@+id/fail_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_bg"
            android:gravity="center"
            android:text="@string/fail_search"
            android:textColor="@color/text_blue"
            android:textSize="20sp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/pb_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_bg"
            android:gravity="center">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>